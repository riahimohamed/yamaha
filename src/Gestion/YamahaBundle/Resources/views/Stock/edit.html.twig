{% extends '::base.html.twig' %}

{% block body -%}

    <div class="col-sm-8 col-sm-offset-2 aff">
        <h2>Modifier Stock ID {{ entity.id }}</h2>

        <form action="{{ path('stock_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

            {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}
            <input type="hidden" name="_method" value="PUT" />
            <div>
                {{ form_errors(edit_form.quantity) }}
                {{ form_widget(edit_form.quantity, { 'attr': {'class': 'form-control', 'placeholder': "Quantit√©"} }) }}
            </div><br>

            <div>
                {{ form_errors(edit_form.modele) }}
                {{ form_widget(edit_form.modele, { 'attr': {'class': 'form-control'} }) }}
            </div><br>

            <div>
                {{ form_errors(edit_form.nbrModele) }}
                {{ form_widget(edit_form.nbrModele, { 'attr': {'class': 'form-control', 'placeholder': "Nombre de modeles"} }) }}
            </div><br>

            <div class="pull-right">
                <button type="submit" class="btn btn-primary">Modifier</button>
            </div>
            <br>
            <br>

            {{ form_end(edit_form) }}

        </form>

    </div>

{% endblock %}
